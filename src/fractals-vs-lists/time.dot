digraph g {
    node [shape=box];
    past [color=white, label="..."];
    yesterday [color=lightgrey];
    today [color=green];
    nextDay [label="day after tomorrow"];
    future [label="...", color=white];

    past -> yesterday;
    yesterday -> today;
    today -> tomorrow;
    tomorrow -> nextDay;
    nextDay -> future;
}
